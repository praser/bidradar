{
  "name": "bidradar",
  "version": "0.5.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "build": "pnpm -r build",
    "dev:api": "pnpm --filter @bidradar/api... build && pnpm --filter @bidradar/api dev",
    "dev:cli": "pnpm --filter @bidradar/cli dev",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:generate": "pnpm --filter @bidradar/db generate",
    "db:migrate": "pnpm --filter @bidradar/db migrate",
    "db:studio": "pnpm --filter @bidradar/db studio",
    "typecheck": "pnpm -r typecheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "vitest run --config vitest.config.e2e.ts",
    "test:e2e:live": "vitest run --config vitest.config.e2e.live.ts",
    "act:ci": "act pull_request -W .github/workflows/ci.yml --secret-file .env -e .github/act/pull-request-event.json",
    "act:release": "act push -W .github/workflows/release.yml --secret-file .env --secret AWS_ACCESS_KEY_ID --secret AWS_SECRET_ACCESS_KEY --secret AWS_SESSION_TOKEN --secret AWS_REGION"
  },
  "devDependencies": {
    "@aws-sdk/client-ssm": "^3.990.0",
    "@hono/node-server": "^1.19.9",
    "@types/node": "^22.19.11",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.9",
    "jose": "^6.1.3",
    "postgres": "^3.4.8",
    "sst": "^3.17.38",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
