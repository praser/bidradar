{
  "name": "bidradar",
  "version": "0.6.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "build": "pnpm -r build",
    "dev:api": "sh -c 'node scripts/with-ssm-env.mjs \"$@\" sh -c \"pnpm --filter @bidradar/api... build && pnpm --filter @bidradar/api dev\"' _",
    "dev:cli": "sh -c 'node scripts/with-ssm-env.mjs \"$@\" pnpm --filter @bidradar/cli dev' _",
    "dev:worker": "sh -c 'node scripts/with-ssm-env.mjs \"$@\" pnpm --filter @bidradar/worker dev' _",
    "build:worker": "pnpm --filter @bidradar/worker build",
    "env:push": "node scripts/env-push.mjs",
    "env:pull": "node scripts/env-pull.mjs",
    "db:generate": "sh -c 'node scripts/with-ssm-env.mjs \"$@\" pnpm --filter @bidradar/db generate' _",
    "db:migrate": "sh -c 'node scripts/with-ssm-env.mjs \"$@\" pnpm --filter @bidradar/db migrate' _",
    "db:studio": "sh -c 'node scripts/with-ssm-env.mjs \"$@\" pnpm --filter @bidradar/db studio' _",
    "typecheck": "pnpm -r typecheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "vitest run --config vitest.config.e2e.ts",
    "test:e2e:live": "vitest run --config vitest.config.e2e.live.ts",
    "act:ci": "act pull_request -W .github/workflows/ci.yml --secret-file .env -e .github/act/pull-request-event.json",
    "act:release": "act push -W .github/workflows/release.yml --secret-file .env --secret AWS_ACCESS_KEY_ID --secret AWS_SECRET_ACCESS_KEY --secret AWS_SESSION_TOKEN --secret AWS_REGION"
  },
  "devDependencies": {
    "@aws-sdk/client-ssm": "^3.990.0",
    "@hono/node-server": "^1.19.9",
    "@types/node": "^22.19.11",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.9",
    "jose": "^6.1.3",
    "postgres": "^3.4.8",
    "sst": "^3.17.38",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
