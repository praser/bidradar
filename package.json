{
  "name": "bidradar",
  "version": "0.0.1-alpha",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "build": "pnpm -r build",
    "dev:api": "pnpm --filter @bidradar/api... build && pnpm --filter @bidradar/api dev",
    "dev:cli": "pnpm --filter @bidradar/cli dev",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:generate": "pnpm --filter @bidradar/db generate",
    "db:migrate": "pnpm --filter @bidradar/db migrate",
    "db:studio": "pnpm --filter @bidradar/db studio",
    "typecheck": "pnpm -r typecheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "vitest run --config vitest.config.e2e.ts"
  },
  "devDependencies": {
    "@hono/node-server": "^1.19.9",
    "@types/node": "^22.19.11",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.9",
    "jose": "^6.1.3",
    "postgres": "^3.4.8",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
