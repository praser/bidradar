{
  "name": "bidradar",
  "version": "0.0.1-alpha",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "build": "pnpm -r build",
    "dev:api": "pnpm --filter @bidradar/api dev",
    "dev:cli": "pnpm --filter @bidradar/cli dev",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "devDependencies": {
    "drizzle-kit": "^0.31.9",
    "typescript": "^5.9.3"
  }
}
